<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="103" Width="337">
    <Grid VerticalAlignment="Top" Height="72">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="69*"/>
            <ColumnDefinition Width="106*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal" Height="35" Margin="0,-5,0,5" Grid.ColumnSpan="2">
            <Button Content="Gra"  Click="clickPlay" MinWidth="100"/>
            <Button Content="Rejestracja"  Click="clickLog" MinWidth="100" Margin="10,0,0,0"/>
            <Button Content="Login" Click="clickRegistration" MinWidth="100" Margin="10,0,0,0"/>

        </StackPanel>

        <Frame x:Name="nameMenu" Margin="0,35,0,0" NavigationUIVisibility="Hidden" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
